syntax on
set number

" タブの設定
set tabstop=4
set softtabstop=4
set sw=4
set expandtab

" 文字コードの設定
set encoding=utf8
set fileencoding=utf8
set fileencodings=utf8,eucjp,sjis

" バッファの設定
set hidden

" キーマップ
noremap <C-n> :bn<CR>
noremap <C-p> :bp<CR>
noremap <C-h> <C-w><C-h>
noremap <C-j> <C-w><C-j>
noremap <C-k> <C-w><C-k>
noremap <C-l> <C-w><C-l>
